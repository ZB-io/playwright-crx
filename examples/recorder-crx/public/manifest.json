{
  "name": "Roost Recorder",
  "version": "0.15.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo192.png",
    "32": "logo192.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png"
    },
    "default_title": "Roost Recorder"
  },
  "commands": {
    "record": {
      "suggested_key": {
        "default": "Shift+Alt+R"
      },
      "description": "Start recording"
    },
    "inspect": {
      "suggested_key": {
        "default": "Shift+Alt+C"
      },
      "description": "Start inspecting"
    }
  },
  "side_panel": {
    "default_path": "empty.html"
  },
  "options_ui": {
    "page": "preferences.html",
    "open_in_tab": false
  },
  "permissions": ["debugger", "tabs", "contextMenus", "storage", "sidePanel"]
}
